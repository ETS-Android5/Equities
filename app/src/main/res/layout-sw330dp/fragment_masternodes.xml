<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/direction_masternode"/>

                <android.support.v7.widget.AppCompatTextView

                        android:id="@+id/crypto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:background="#00000000"
                        android:gravity="center"

                        android:text="@string/masternodes"
                        android:textColor="@color/colorPrimary"
                        android:textSize="26sp"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:src="@drawable/direction_masternode"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp">

                <TextView
                        android:id="@+id/number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:gravity="left|center"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/symbol"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:text="Sym"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/scpro"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:text="%"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".9"
                        android:gravity="left|center"
                        android:singleLine="true"
                        android:text="Name"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"/>

                <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:singleLine="true"
                        android:text="Nodes"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Cost"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"/>
                <TextView
                        android:id="@+id/cap"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".9"
                        android:fontFamily="@font/scpro"
                        android:gravity="center|right"
                        android:text="Market Cap"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
            </TableRow>
            <TextView android:id="@+id/masternode_data_provider"
                      android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      android:gravity="center"
                      android:textColor="@color/colorPrimary"
                      android:autoLink="web"
                      android:textColorLink="@color/darkTextColor"
                      android:text="@string/masternode_data_provider" android:textSize="12sp"
            />
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/masternode_items"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="#00000000"
            />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>