<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background_gradient"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              tools:context="equities.com.myapplication.Activity_Main">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#000000"
            app:elevation="0dp">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                      android:layout_marginBottom="10dp" android:background="#0000ff">
                <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_left_grad"
                        android:layout_weight="3"></View>
                <AutoCompleteTextView
                        android:id="@+id/searchtool"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:ems="25"
                        android:foregroundGravity="center"
                        android:hint="Search for Equities"
                        android:layout_weight="1"
                        android:imeOptions="actionDone"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#0000ff"
                        android:textColorHint="#01579B"
                        android:textSize="22dp"
                        android:textStyle="italic"
                        android:gravity="center_horizontal|center_vertical"></AutoCompleteTextView>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_right_grad"
                        android:layout_weight="3"></View>

                <ImageView
                        android:id="@+id/refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:src="@drawable/refresh"/>
            </TableRow>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">




            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:id="@+id/progLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#00000000"
                            android:visibility="gone">


                <TextView
                        android:id="@+id/output2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="25%"
                        android:textColor="#ffffff"
                        android:textSize="30sp"
                        android:textStyle="italic"/>

                <ProgressBar
                        android:id="@+id/mainbar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:indeterminate="true" />

            </RelativeLayout>

            <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="fill_parent"
                    android:background="#00000000"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            <android.support.v4.view.ViewPager
                    android:id="@+id/market_pager"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:visibility="gone" />
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2">

                    <android.support.design.widget.TabLayout
                            android:id="@+id/tabs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:tabIndicatorHeight="1dp"
                            app:tabIndicatorColor="@color/colorPrimary"
                            app:tabMode="scrollable"
                            app:tabSelectedTextColor="#ffffff"
                            app:tabTextAppearance="@style/TextAppearance.AppCompat.Small"
                            app:tabTextColor="#D3D3D3"/>
                </LinearLayout>


            </TableRow>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>