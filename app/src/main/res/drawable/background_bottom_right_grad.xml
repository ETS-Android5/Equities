<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
                android:fromDegrees="45"
                android:toDegrees="45"
                android:pivotX="0%"
                android:pivotY="0%">
            <shape
                    android:shape="rectangle"
                    android:top="1dp">
                <stroke
                        android:width="30dip"
                        android:color="#ffffFF"/>
            </shape>
        </rotate>
    </item>
</selector>