<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="@string/stock_volume_leaders"
            android:textColor="@color/darkTextColor"
            android:textSize="24sp"
            android:textStyle="bold" />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Symbol"
                android:textColor="@color/darkTextColor"
                android:textSize="10sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Name"
                android:textColor="@color/darkTextColor"
                android:textSize="10sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Change"
                android:textColor="@color/darkTextColor"
                android:textSize="10sp" />
        </TableRow>

        <TextView
            android:id="@+id/volumestock1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="GSAT GlobalStar +400.56%"
            android:textColor="@color/darkTextColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/volumestock2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="DPW Digital Power +332.56%"
            android:textColor="@color/darkTextColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/volumestock3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="BIOA Biowhatever +209.46"
            android:textColor="@color/darkTextColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/volumestock4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="BIOA Biowhatever +209.46"
            android:textColor="@color/darkTextColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/volumestock5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:textColor="@color/darkTextColor"
            android:textSize="20sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Symbol"
                android:textColor="@color/darkTextColor"
                android:textSize="10sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Name"
                android:textColor="@color/darkTextColor"
                android:textSize="10sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Change"
                android:textColor="@color/darkTextColor"
                android:textSize="10sp" />
        </TableRow>
        <TextView
            android:id="@+id/crypto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="@string/crypto_volume_leaders"
            android:textColor="@color/darkTextColor"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/volumecrypto1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="TRX Tron +1430.56%"
            android:textColor="@color/darkTextColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/volumecrypto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="BTC Bitcoin +262.56%"
            android:textColor="@color/darkTextColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/volumecrypto3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="ETH ETHEREUM +111.19"
            android:textColor="@color/darkTextColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/volumecrypto4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="TRX Tron +1430.56%"
            android:textColor="@color/darkTextColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/volumecrypto5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="TRX Tron +1430.56%"
            android:textColor="@color/darkTextColor"
            android:textSize="20sp" />


    </LinearLayout>
</LinearLayout>