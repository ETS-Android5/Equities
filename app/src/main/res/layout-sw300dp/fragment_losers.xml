<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:orientation="vertical">

            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp" android:layout_gravity="center">

                <android.support.v7.widget.AppCompatTextView

                        android:id="@+id/stock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:gravity="center"

                        android:text="@string/stock_market_losers"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"/>

            </TableRow>

            <TextView
                android:id="@+id/stock_loser_data_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:gravity="center"
                android:text="@string/stock_loser_winner_data_provider"
                android:textColor="@color/colorPrimary"
                android:textColorLink="@color/darkTextColor"
                android:textSize="10sp" />

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/stock_items"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="#000000"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp" android:layout_gravity="center">

                <android.support.v7.widget.AppCompatTextView

                        android:id="@+id/crypto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:gravity="center"

                        android:text="@string/crypto_losers"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"/>

            </TableRow>

            <TextView
                android:id="@+id/crypto_loser_data_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:gravity="center"
                android:text="@string/crypto_loser_winner_data_provider"
                android:textColor="@color/colorPrimary"
                android:textColorLink="@color/darkTextColor"
                android:textSize="10sp" />

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/crypto_items"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="#000000"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>